@using TheGioiLoa.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-5 col-md-7 col-sm-9 mx-auto">
            <div class="card card-signin my-5 shadow">
                <div class="card-body">
                    <h5 class="text-center text-info mb-3">Đăng Nhập</h5>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })
                        <div class="form-group row align-items-center">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                            <div class="col-md-9 offset-3 mt-1">
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-3" })
                            <div class="col-md-9">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                            <div class="col-md-9 offset-3 mt-1">
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="form-group row align-items-center">
                            <div class="col-md-9 offset-md-3">
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input" })
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "custom-control-label" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            <div class="col-md-12">
                                <button class="btn btn-success btn-block text-uppercase" type="submit">Đăng Nhập</button>
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            <div class="col-md-12">
                                <p class="text-center">
                                    Quên mật khẩu?
                                    <a href="@Url.Action("ForgotPassword","Account")" class="">Click vào đây</a>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>