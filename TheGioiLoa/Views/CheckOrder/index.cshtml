@model TheGioiLoa.Models.ViewModel.InputOrderId
@{
    ViewBag.Title = "CheckOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card card-shadow py-5">
        <h3 class="text-success text-center">Tra cứu thông tin đơn hàng (Tình trạng, bảo hành, vận chuyển,...)</h3>
        @using (Html.BeginForm("CheckOrderDetails", "CheckOrder", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="row my-5">
                <div class="col-md-6 offset-3">
                    <h5 class="text-gray">Nhập mã đơn hàng của bạn</h5>
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.OrderId, new { @class = "form-control border-info search-bar-input" })
                        <div class="input-group-append">
                            <button class="btn btn-info" type="submit">
                                <i class="fas fa-search text-white"></i>
                                Kiểm Tra
                            </button>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.OrderId, "", new { @class = "text-danger small" })
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
