@model TheGioiLoa.Models.RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group row align-items-center">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        </div>
        <div class="col-md-9 offset-3 mt-1">
            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger small" })
        </div>
    </div>
    <div class="form-group row align-items-center">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
        </div>
        <div class="col-md-9 offset-3 mt-1">
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small" })
        </div>
    </div>
    <div class="form-group row align-items-center">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="col-md-9 offset-3 mt-1">
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
        </div>
    </div>
    <div class="form-group row align-items-center">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="col-md-9 offset-3 mt-1">
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
        </div>
    </div>
    <div class="form-group row align-items-center">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        <div class="col-md-9 offset-3 mt-1">
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
        </div>
    </div>
    <div class="form-group row align-items-center">
        <div class="col-md-9 offset-md-3">
            <button class="btn btn-primary btn-block text-uppercase" type="submit">Đăng Ký</button>
        </div>
    </div>

}