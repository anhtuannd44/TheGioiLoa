@model TheGioiLoa.Models.LoginViewModel

@using (Ajax.BeginForm("Login", "Account", FormMethod.Post, new AjaxOptions
{
    OnBegin = "loginBegin",
    OnSuccess = "loginSuccess"
}))
{
    @Html.AntiForgeryToken()
    <div class="form-group row align-items-center">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="col-md-9 offset-3 mt-1">
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
        </div>
    </div>
    <div class="form-group row align-items-center">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-3" })
        <div class="col-md-9">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="col-md-9 offset-3 mt-1">
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
        </div>
    </div>

    <div class="form-group row align-items-center">
        <div class="col-md-9 offset-md-3">
            <div class="custom-control custom-checkbox">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input" })
                @Html.LabelFor(m => m.RememberMe, new { @class = "custom-control-label" })
            </div>
        </div>
    </div>
    <div class="form-group row align-items-center">
        <div class="col-md-9 offset-md-3">
            <button class="btn btn-primary btn-block text-uppercase" type="submit">Đăng Nhập</button>
        </div>
    </div>
    <div class="form-group row align-items-center">
        <div class="col-md-9 offset-md-3">
            <p class="text-center">
                Quên mật khẩu?
                <a href="@Url.Action("ForgotPassword","Account")" class="">Click vào đây</a>
            </p>
        </div>
    </div>
    @*<hr class="my-4">*@
    @*<button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>*@
}



