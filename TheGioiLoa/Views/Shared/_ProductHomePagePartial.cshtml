@model TheGioiLoa.Models.ViewModel.ProductHomePageViewModel
@{
    var childCategoryCount = 0;
}
@if (Model.Product != null)
{
    <div class="container pt-4">
        <div class="row">
            <div class="@(Model.Id != 2?"col-md-12":"col-md-8")">
                <div class="bg-white">
                    <div class="product-header clearfix">
                        <h5 class="float-left product-header-title pl-2">@Model.Category.Name</h5>
                        <div class="product-header-link float-right mt-1">
                            @foreach (var item in Model.CategoryList)
                            {
                                <a href="~/cua-hang/danh-muc/@item.CategoryId/@item.Url" class="product-header-link-a">@item.Name</a>
                                childCategoryCount++;
                                if (childCategoryCount >3)
                                {
                                    break;
                                }
                            }
                            <a href="~/cua-hang/danh-muc/@Model.Category.CategoryId/@Model.Category.Url" class="product-header-link-a">Xem tất cả</a>
                        </div>
                    </div>
                    <div class="row homeproduct">
                        @if (Model.Id == 6)
                        {
                            <div class="col-md-6">
                                <div class="karaoke-video">
                                    <iframe width="100%" height="300" src="https://www.youtube.com/embed/@Model.LinkYoutube" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </div>
                            </div>
                        }
                        @foreach (var item in Model.Product)
                        {
                            <div class="col-md-3 @(Model.Count == 10 ? "w-20" : "") producthome-item">
                                <a href="~/cua-hang/san-pham/@item.ProductId/@item.Url">
                                    <img src="~/Content/Upload/Images/@item.Cover" style="width: 100%" />
                                    <h3>@item.Name</h3>
                                    <div class="text-center">
                                        <strong class="price">@string.Format("{0:0,0 ₫}", item.PriceSale)</strong>
                                        <del class="price-sale">@string.Format("{0:0,0 ₫}", item.Price)</del>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            @if (Model.Id == 2)
            {
                <div class="col-md-4">
                    <div class="blog bg-white">
                        <div class="blog-header bg-primary text-white py-2 px-2">
                            <h6 class="font-weight-bold m-0 mt-1 float-left">Tin Tức - Công Nghệ</h6>
                            <a href="#" class="text-white float-right view-all px-2 py-1 rounded">Xem Thêm <i class="fa fa-angle-double-right"></i></a>
                            <div style="clear: both"></div>
                        </div>
                        <div class="blog-content border">
                            @Html.Action("GetBlogHome", "Home")
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
