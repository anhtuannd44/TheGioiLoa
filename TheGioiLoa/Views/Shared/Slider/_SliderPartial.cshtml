@model IEnumerable<TheGioiLoa.Models.Slider>
@{
    var active = true;
}
<div id="sliderHome" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <li data-target="#sliderHome" data-slide-to="@i"></li>
        }
    </ol>
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            <div class="carousel-item @(active?"active":"")">
                <div class="image-box ratio-20-9">
                    <a href="@(string.IsNullOrEmpty(item.Url) ? "#": item.Url)" class="image" style="background-image: url('../../Content/Upload/Images/@item.ImageId')">
                    </a>
                </div>
            </div>
            active = false;
        }
    </div>
    <a class="carousel-control-prev" href="#sliderHome" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#sliderHome" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
