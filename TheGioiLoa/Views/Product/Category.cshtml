    <div class="product-area">
        <div class="product-header">
            <h5 class="product-header-title float-left">Mua theo Combo</h5>
            <div class="product-header-link float-lg-right">
                <div class="d-flex mt-2">
                    <div id="loadingGif" class="mr-3" style="display: none">
                        <img src="~/Content/Home/loading.gif" width="30" />
                    </div>
                    <button class="btn btn-primary btn-block btn-sm border-0 rounded mr-3" id="prireSortBtn" onclick="showPriceSort()">Chọn mức giá</button>
