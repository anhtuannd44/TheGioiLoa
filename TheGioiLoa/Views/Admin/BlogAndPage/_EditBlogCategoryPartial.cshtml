@model TheGioiLoa.Models.BlogCategory

<div class="modal-header">
    <h4 class="modal-title" id="titleModal">Chỉnh sửa hoặc xóa</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
@if (Model != null)
{
    using (Ajax.BeginForm("EditBlogCategory", new AjaxOptions
    {
        HttpMethod = "POST",
        OnBegin = "loadingSpinner('#modalNormal-loading')",
        OnSuccess = "actionBlogCategorySuccess"
    }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-body position-relative">
            @Html.HiddenFor(model => model.BlogCategoryId)
            <div class="form-group">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger mt-1" })
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger delete-blog-category" data-id="@Model.BlogCategoryId"><i class="fas fa-trash"></i></button>
            <button type="submit" class="btn btn-success">Lưu Chỉnh Sửa</button>
        </div>
    }
}