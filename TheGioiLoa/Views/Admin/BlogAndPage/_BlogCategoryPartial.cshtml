@model IEnumerable<TheGioiLoa.Models.BlogCategory>

@if (Model.ToList().Count != 0)
{
    <ul class="pl-4">
        @foreach (var item in Model)
        {
            <li class="py-1">
                <a href="#" class="text-info blog-category-action py-1 edit-blog-category"
                   data-id="@item.BlogCategoryId"
                   data-toggle="modal"
                   data-target="#ModalTemplateNormal">
                   @item.Name
                </a>
            </li>
        }
    </ul>    
}
else
{
    <p class="text-danger small text-center">Chưa có chuyên mục</p>
}

