@model IEnumerable<TheGioiLoa.Models.Image>

<div class="card-header">
    <h3 class="card-title float-left">CHỈNH SỬA HÌNH NỔI BẬT CỬA HÀNG</h3>
    @if (Model.Count() < 2)
    {
        <div class="float-right">
            <button type="button" class="btn btn-success btn-sm text-right" id="addPromotionImage" data-target="#ModalTemplate" data-toggle="modal">Thêm Hình</button>
        </div>
    }
</div>
<div class="card-body">
    <div class="row mt-2 mx-0" id="sliderImageList">
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <div class="col-md-5 p-0 mb-3 text-center mx-3">
                    <div class="row m-0">
                        <div class="col-md-12 p-0">
                            <div class="image-box ratio-20-9 slider-item">
                                <a href="#" class="image" data-value="@item.ImageId" style="background-image: url('../Content/Upload/Images/@item.ImageId');">
                                </a>
                            </div>
                        </div>
                    </div>
                    <a href="#delete" id="delete" class="delete-promotion-image" data-value="@item.ImageId">Xóa</a>
                </div>
            }
        }
        else
        {
            <p class="text-center">Chưa có hình nào. Bạn được phép upload tối đa 2 hình</p>
        }
    </div>
</div>

