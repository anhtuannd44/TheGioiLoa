@model IEnumerable<TheGioiLoa.Models.Menu>
@{ var i = 1;}
<div class="card-header">
    <h3 class="card-title float-left">Footer @ViewBag.Type</h3>
    <div class="float-right">
        <button type="button"
                class="btn btn-success btn-sm btn-flat text-right"
                id="addMenu" data-footer="@ViewBag.Type"
                data-toggle="modal"
                data-url="/Admin/LoadAddMenuFooterPartial"
                data-target="#ModalTemplateNormal">
                    Thêm Menu
                </button>
    </div>
</div>

@if (Model.Count() != 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width: 5%">
                    STT
                </th>
                <th style="width: 20%">
                    Tên Menu
                </th>
                <th style="width: 10%" class="text-center">
                    Hành động
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        <a href="@item.Url" data-toggle="tooltip" data-placement="top" title="Xem @item.Name"> @item.Name </a>

                    </td>

                    <td class="text-center">
                        <a class="" href="@item.Url" data-toggle="tooltip" title="Xem" target="_blank">
                            <i class="fas fa-eye text-info">
                            </i>
                        </a>
                        <a class="ml-1 edit-menu" href="#edit" data-toggle="modal" title="Sửa" data-target="#ModalTemplateNormal" data-url="/Admin/LoadEditMenuFooterPartial" data-id="@item.MenuId" data-name="@item.Name">
                            <i class="fas fa-pencil-alt text-warning">
                            </i>
                        </a>
                        <a class="ml-1 delete-menu" href="#remove" data-id="@item.MenuId" data-name="@item.Name" data-type="@item.Type" data-toggle="tooltip" title="Xóa">
                            <i class="fas fa-trash text-danger">
                            </i>
                        </a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}
else
{
    <div class="no-infomation my-2">
        <p class="text-danger text-center">Chưa có dữ liệu</p>
    </div>
}

