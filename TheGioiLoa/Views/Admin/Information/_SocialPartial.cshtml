@model TheGioiLoa.Models.ViewModel.SocialViewModel
@using (Ajax.BeginForm("UpdateSocial", new AjaxOptions
{
    HttpMethod = "POST",
    OnBegin = "loadingSpinner('#updateSocial-Loading')",
    OnSuccess = "updateSocialSuccess",
    OnComplete ="exitSpinner('#updateSocial-Loading')"
}))
{
    @Html.AntiForgeryToken()
    <div class="card-header">
        <h3 class="card-title float-left">Thông Tin Social Network</h3>
        <div class="float-right">
            <button type="submit" class="btn btn-success btn-sm btn-flat text-right">Cập Nhật</button>
        </div>
    </div>
    <div class="card-body">
        <div class="form-group row align-items-center">
            @Html.LabelFor(m => m.Facebook, new { @class = "col-md-4 m-0" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Facebook, new { @class = "form-control form-control-sm rounded-0" })
                @Html.ValidationMessageFor(a => a.Facebook, null, new { @class = "my-1 text-danger small" })
            </div>
        </div>
        <div class="form-group row align-items-center">
            @Html.LabelFor(m => m.Youtube, new { @class = "col-md-4 m-0" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Youtube, new { @class = "form-control form-control-sm s-0" })
                @Html.ValidationMessageFor(a => a.Youtube, null, new { @class = "my-1 text-danger small" })
            </div>
        </div>
        <div class="form-group row align-items-center">
            @Html.LabelFor(m => m.Zalo, new { @class = "col-md-4 m-0" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Zalo, new { @class = "form-control form-control-sm rounded-0" })
                @Html.ValidationMessageFor(a => a.Zalo, null, new { @class = "my-1 text-danger small" })
            </div>
        </div>
    </div>
}