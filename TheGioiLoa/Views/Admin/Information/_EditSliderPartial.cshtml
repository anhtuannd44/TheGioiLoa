@model IEnumerable<TheGioiLoa.Models.Slider>
@{
    var active = 1;
}
<div class="card-header">
    <h3 class="card-title float-left">CHỈNH SỬA SLIDER HOME</h3>
    <div class="float-right">
        <button type="button" class="btn btn-success btn-sm text-right" id="addImageToSlider" data-target="#ModalTemplateNormal" data-toggle="modal">Thêm Hình Vào Slider</button>
    </div>
</div>
<div class="card-body">
    <div class="row">
        <div class="col-md-12">
            <p class="text-danger text-center">Kích thước tỉ lệ chuẩn: 20:9 (984x442 px)</p>
        </div>
        <div class="col-md-7">
            @if (Model.Count() != 0)
            {
                <div id="sliderHome" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <li data-target="#sliderHome" data-slide-to="@i"></li>
                        }
                    </ol>
                    <div class="carousel-inner">
                        @foreach (var item in Model)
                        {
                            <div class="carousel-item @(active==1?"active":"")">
                                <div class="image-box ratio-20-9">
                                    <div href="#" class="image" style="background-image: url('../Content/Upload/Images/@item.ImageId');">
                                    </div>
                                </div>
                            </div>
                            active++;
                        }
                    </div>
                    <a class="carousel-control-prev" href="#sliderHome" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#sliderHome" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            }
            else
            {
                <div class="text-center py-2 text-primary">Chưa có slider</div>
            }
        </div>
        <div class="col-md-5">
            <div class="row mt-2 mx-0" id="sliderImageList">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 p-0 mb-3 text-center">
                        <div class="row m-0">
                            <div class="col-md-12 p-0">
                                <div class="image-box ratio-20-9 slider-item">
                                    <div href="#" class="image" data-value="@item.SliderId" style="background-image: url('../Content/Upload/Images/@item.ImageId');">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="#delete" id="delete" class="delete-slider" data-value="@item.SliderId">Xóa</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
