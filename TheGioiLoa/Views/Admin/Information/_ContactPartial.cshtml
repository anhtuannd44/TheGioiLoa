@model TheGioiLoa.Models.ViewModel.ContactViewModel

@using (Ajax.BeginForm("UpdateContact", new AjaxOptions
{
    HttpMethod = "POST",
    OnBegin = "loadingGifContact",
    OnSuccess = "updateContactSuccess"
}))
{
    <div class="card-header">
        <h3 class="card-title float-left">Email, Hotline và Địa chỉ</h3>
        <div class="float-right">
            <button type="submit" class="btn btn-success btn-sm btn-flat text-right">Cập Nhật</button>
        </div>
    </div>
    <div class="card-body">
        <div class="form-group row align-items-center">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 m-0" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(a => a.Email, null, new { @class = "my-1 text-danger small" })
            </div>
        </div>
        <div class="form-group row align-items-center">
            @Html.LabelFor(m => m.Hotline, new { @class = "col-md-4 m-0" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Hotline, new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(a => a.Hotline, null, new { @class = "my-1 text-danger small" })
            </div>
        </div>
        <div class="form-group row align-items-center">
            @Html.LabelFor(m => m.Address, new { @class = "col-md-4 m-0" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(a => a.Address, null, new { @class = "my-1 text-danger small" })
            </div>
        </div>
    </div>
}