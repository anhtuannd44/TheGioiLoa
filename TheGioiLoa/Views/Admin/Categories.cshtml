@model TheGioiLoa.Models.ViewModel.CreateCategoryViewModel

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Tạo danh mục sản phẩm</h3>
            </div>
            @using (Ajax.BeginForm("CreateCategory", new AjaxOptions
            {
                HttpMethod = "POST",
                OnBegin = "loadingGif",
                OnSuccess = "loadingNoti",
                OnComplete = "extiLoadingGif"
            }))
            {
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        <input class="form-control" id="Name" name="Name" required="" type="text" value="">
                    </div>
                    <div class="form-group" id="categoryParentCreate">
                        @Html.LabelFor(model => model.CategoryParentId, "Thuộc chuyên mục gốc?")
                        <select name="CategoryParentId" id="CateoryParentId" class="form-control">
                            <option value="">--Không thuộc danh mục gốc nào--</option>
                            @foreach (var item in ViewBag.CategoryParentList)
                            {
                                <option value="@item.CategoryId">@item.Name</option>
                            }
                        </select>
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Tạo Chuyên Mục</button>
                </div>
            }
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-widget widget-user-2">
            <div class="card-header bg-info">
                <h3 class="card-title">Danh Mục Sản Phẩm</h3>
            </div>
            <div class="card-body p-0" id="categoryList">

            </div>
            <div id="loadingGif">
                <div class="position-relative h-100 w-100">
                    <div class="loadingio-spinner-spinner-0g9wfi70d3hr">
                        <div class="ldio-dmto02pujx">
                            <div></div><div></div><div></div><div></div><div></div><div></div><div></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Admin/Category.js"></script>
}
