@model IEnumerable<TheGioiLoa.Models.Category>
@{

    ViewBag.Title = "Chuyên Mục Sản Phẩm";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";

}

<div class="row" id="adminPage">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tạo danh mục sản phẩm</h3>
            </div>
            @using (Ajax.BeginForm("CreateCategory", new AjaxOptions
            {
                HttpMethod = "POST",
                OnBegin = "loadingGif",
                OnSuccess = "loadingNoti",
                OnComplete = "exitLoadingGif"
            }))
            {
                <div class="card-body">
                    <div class="form-group row align-items-center">
                        <label for="Name" class="col-md-3">Tên Danh Mục</label>
                        <div class="col-md-9">
                            <input class="form-control form-control-sm rounded-0" id="Name" name="Name" required="" type="text" value="">
                        </div>
                    </div>
                    <div class="form-group row align-items-center" id="categoryParentCreate">
                        <label for="CategoryParentId" class="col-md-3">Thuộc danh mục gốc?</label>
                        <div class="col-md-9">
                            <select name="CategoryParentId" id="CategoryParentId" class="form-control form-control-sm rounded-0">
                                <option value="" class="font-weight-bold">Không thuộc danh mục gốc nào</option>

                                @foreach (var item in Model)
                                {
                                    if (item.CategoryParentId == null)
                                    {
                                        <option value="@item.CategoryId" class="font-weight-bold">@item.Name</option>

                                        foreach (var child in Model)
                                        {
                                            if (child.CategoryParentId == item.CategoryId)
                                            {
                                                <option value="@child.CategoryId">&nbsp;&nbsp;&nbsp;@child.Name</option>
                                            }
                                        }

                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group row align-items-center">
                        <div class="col-md-12 text-right">
                            <button type="submit" class="btn btn-success">Tạo Chuyên Mục</button>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh Mục Sản Phẩm</h3>
            </div>
            <div class="card-body" id="categoryList">

            </div>
            <div id="loadingGif" class="spinner-loading" style="display: none;">
                <img src="/Content/Spinner.png" alt="Loading...">
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Admin/category.js"></script>
    <script>
        $(document).ready(function () {
            loadCategoryList();
        });
    </script>
}
