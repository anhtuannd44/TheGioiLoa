@model IEnumerable<TheGioiLoa.Models.Category>
@{

    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";

}

<div class="row">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Tạo danh mục sản phẩm</h3>
            </div>
            @using (Ajax.BeginForm("CreateCategory", new AjaxOptions
            {
                HttpMethod = "POST",
                OnBegin = "loadingGif",
                OnSuccess = "loadingNoti",
                OnComplete = "extiLoadingGif"
            }))
            {
                <div class="card-body">
                    <div class="form-group">
                        <label for="Name">Tên Danh Mục</label>
                        <input class="form-control" id="Name" name="Name" required="" type="text" value="">
                    </div>
                    <div class="form-group" id="categoryParentCreate">
                        <label for="CategoryParentId">Thuộc danh mục gốc?</label>
                        <select name="CategoryParentId" id="CategoryParentId" class="form-control">
                            <option value="" class="font-weight-bold">Không thuộc danh mục gốc nào</option>
                            
                            @foreach (var item in Model)
                            {
                                if (item.CategoryParentId == null)
                                {
                                    <option value="@item.CategoryId" class="font-weight-bold">@item.Name</option>

                                    foreach (var child in Model)
                                    {
                                        if (child.CategoryParentId == item.CategoryId)
                                        {
                                            <option value="@child.CategoryId">&nbsp;&nbsp;&nbsp;@child.Name</option>
                                        }
                                    }

                                }
                            }
                        </select>
                    </div>

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Tạo Chuyên Mục</button>
                </div>
            }
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-widget">
            <div class="card-header bg-info">
                <h3 class="card-title">Danh Mục Sản Phẩm</h3>
            </div>
            <div class="card-body" id="categoryList">

            </div>
            <div id="loadingGif">
                <div class="position-relative h-100 w-100">
                    <div class="loadingio-spinner-spinner-0g9wfi70d3hr">
                        <div class="ldio-dmto02pujx">
                            <div></div><div></div><div></div><div></div><div></div><div></div><div></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Admin/Category.js"></script>
    <script>
        $(document).ready(function () {
            loadCategoryList();
        });
    </script>
}
