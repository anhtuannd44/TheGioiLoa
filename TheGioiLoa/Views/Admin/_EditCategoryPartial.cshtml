@model TheGioiLoa.Models.ViewModel.EditCategoryModalViewModel

@using (Ajax.BeginForm("EditCategory", "Admin", null, new AjaxOptions
{
    HttpMethod = "POST",
    OnBegin = "closeModal",
    OnSuccess = "editCategorySuccess",
    OnFailure = "editCategoryFailure",
}, new { @id = "EditCategoryForm" }))
{

    <div class="modal-header">
        <h4 class="modal-title" id="titleModal">Chỉnh sửa danh mục</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body">
        @Html.HiddenFor(model=>model.CategoryId)
        <div class="form-group">
            <label for="Name">Tên danh mục</label>
            <input type="text" name="Name" id="Name" class="form-control input-form-name" required value="@Model.Name" />
        </div>
        <div class="form-group" id="categoryParentEdit">
            <label for="CategoryParentId">Thuộc chuyên mục gốc?</label>
            <select name="CategoryParentId" id="CateoryParentId" class="form-control">
                <option value="">--Không thuộc danh mục gốc nào--</option>
                @if (Model.ParentList != null)
                {
                    foreach (var item in Model.ParentList)
                    {
                        <option value="@item.CategoryId">@item.Name</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
        <button type="submit" class="btn btn-primary">Lưu Lại</button>
    </div>
}