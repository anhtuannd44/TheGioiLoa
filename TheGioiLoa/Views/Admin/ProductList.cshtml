@model IEnumerable<TheGioiLoa.Models.ViewModel.ProductViewModel>

@{
    ViewBag.Title = "Danh Sách Sản Phẩm";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="row" id="adminPage">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tất cả sản phẩm</h3>
                <div class="float-right">
                    <form class="form-inline">
                        <div class="input-group input-group-sm">
                            <input class="form-control form-control-navbar bg-light" style="border-color: #e3e3e3;" type="search" placeholder="Tìm Kiếm" aria-label="Search">
                            <div class="input-group-append">
                                <button class="btn btn-navbar bg-light" style="border-color:#e3e3e3" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="card-body p-0" style="display: block;">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                STT
                            </th>
                            <th class="text-center" style="width: 10%">
                                <i class="fa fa-image"></i>
                            </th>
                            <th style="width: 20%">
                                Tên sản phẩm
                            </th>
                            <th>
                                Giá
                            </th>
                            <th style="width: 8%" class="text-center">
                                Trạng thái
                            </th>
                            <th>
                                Danh mục
                            </th>
                            <th style="width: 10%">
                                Hành động
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.ProductId
                                </td>
                                <td>
                                    <img alt="@item.Name" class="table-avatar" src="../Content/Upload/@item.Cover">
                                </td>
                                <td>
                                    <a href="@Url.Action("EditProduct", "Admin", new {productId = item.ProductId })" data-toggle="tooltip" data-placement="top" title="Xem và chỉnh sửa @item.Name">@item.Name</a>
                                </td>
                                <td class="">
                                    @item.Price
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-success">@item.Status</span>
                                </td>
                                <td>
                                    @{var i = 1;}
                                    @if (item.Categories != null)
                                    {
                                        foreach (var category in item.Categories)
                                        {
                                            if (i == 1)
                                            {
                                                <span>@category.Name</span>
                                                i++;
                                            }
                                            else
                                            {
                                                <span>, @category.Name</span>
                                            }
                                        }
                                    }
                                </td>
                                <td class="text-center">
                                    <a class="" href="" data-toggle="tooltip" title="Xem">
                                        <i class="fas fa-eye text-info">
                                        </i>
                                    </a> |
                                    <a class="" href="@Url.Action("EditProduct", "Admin", new {productId = item.ProductId })" data-toggle="tooltip" title="Sửa">
                                        <i class="fas fa-pencil-alt text-warning">
                                        </i>
                                    </a> |
                                    <a class="" href="#" data-toggle="tooltip" title="Xóa">
                                        <i class="fas fa-trash text-danger">
                                        </i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>
