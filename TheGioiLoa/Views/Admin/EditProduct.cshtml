@model TheGioiLoa.Models.ViewModel.ProductViewModel

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
    var TagValue = "";
    var TagId = "";
    var classRemoveImage = "";
    if (Model.CoverName == "No_Picture.jpg")
    {
        classRemoveImage = "d-none";
    }
}

@using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProductId)
    <p class="text-danger">@ViewBag.NotiPrice</p>
    <div class="row" id="adminPage">
        <div class="col-md-9">
            <div class="form-group mb-2 mt-0">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control rounded-0", @placeholder = "Tên sản phẩm", @required = "required" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger mt-2" })
            </div>

            @*Mô tả ngắn*@
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Mô tả ngắn</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @Html.TextAreaFor(model => model.Description, new { @class = "textarea text-area-0", @rows = "3", @placeholder = "Nhập mô tả ngắn ở đây ..." })
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Dữ liệu sản phẩm</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label for="BrandId" class="col-md-2 col-form-label-sm">Thương hiệu</label>
                        <div class="col-md-10">
                            <select name="BrandId" id="BrandId" class="form-control form-control-sm">
                                <option value="">-- Không có thương hiệu --</option>
                                @if (Model.Brand.FirstOrDefault() != null)
                                {
                                    foreach (var item in Model.Brand)
                                    {
                                        if (item.IsChecked)
                                        {
                                            <option value="@item.BrandId" selected>@item.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item.BrandId">@item.Name</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Price, new { @class = "col-md-4 col-form-label-sm" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.PriceSale, new { @class = "col-md-4 col-form-label-sm text-md-right" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.PriceSale, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.PriceSale, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            @*Đặc điểm nổi bật*@
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Đặc điểm nổi bật</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @Html.TextAreaFor(model => model.Characteristics, new { @class = "textarea text-area-1", @rows = "3", @placeholder = "Nhập mô tả ngắn ở đây ..." })
                </div>
            </div>

            @*Thông số kỹ thuật*@
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Thông số kỹ thuật</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @Html.TextAreaFor(model => model.Details, new { @class = "textarea text-area-2", @rows = "3", @placeholder = "Nhập mô tả ngắn ở đây ..." })
                </div>
            </div>

            @* Khuyến Mãi *@
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Khuyến mãi</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @Html.TextAreaFor(model => model.Promotion, new { @class = "textarea text-area-3", @rows = "3", @placeholder = "Nhập mô tả ngắn ở đây ..." })
                </div>
            </div>

            @* Videos *@
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Video</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Videos, new { @class = "col-md-2 col-form-label-sm" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Videos, new { @placeholder = "Dán link Youtube vào đây ...", @class = "form-control form-control-sm" })
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-3">

            @*Submit Form Card*@
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Đăng</h3>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <select name="Status" id="Status" class="form-control form-control-sm rounded-0 col-md-8">
                            @foreach (var item in Model.StatusList)
                            {
                                if (item.StatusId == Model.Status)
                                {
                                    <option value="@item.StatusId" selected>@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.StatusId">@item.Name</option>
                                }
                            }
                        </select>
                        <div class="col-md-4">
                            <button type="submit" id="submitFormButton" class="btn btn-primary btn-flat btn-sm btn-block">Đăng</button>
                        </div>
                        <div class="col-md-12 d-none" id="deleteNoti">
                            <p class="my-2 small font-italic text-danger">Lưu ý: Những thay đổi của bạn sẽ không được lưu!</p>
                        </div>
                    </div>
                </div>
            </div>

            @*Danh Mục Sản Phẩm*@
            <div class="card" id="createProduct">
                <div class="card-header">
                    <h3 class="card-title">Danh Mục Sản Phẩm</h3>
                </div>
                <div class="card-body" id="categoryList">
                    @if (Model.Categories.FirstOrDefault() != null)
                    {
                        foreach (var item in Model.Categories)
                        {
                            if (item.CategoryParentId == null)
                            {
                                <div class="custom-control custom-checkbox">
                                    @if (item.IsChecked)
                                    {
                                        <input class="custom-control-input category-click" data-level="parent" type="checkbox" id="@item.CategoryId" value="@item.CategoryId" name="CategoryId" checked />
                                    }
                                    else
                                    {
                                        <input class="custom-control-input category-click" data-level="parent" type="checkbox" id="@item.CategoryId" value="@item.CategoryId" name="CategoryId" />
                                    }
                                    <label for="@item.CategoryId" class="custom-control-label font-weight-normal">@item.Name</label>
                                </div>

                                <div class="parentCategory-@item.CategoryId" style="display: block;">
                                    @foreach (var child in Model.Categories)
                                    {
                                        if (child.CategoryParentId == item.CategoryId)
                                        {
                                            <div class="">
                                                <div class="custom-control custom-checkbox ml-4">
                                                    @if (child.IsChecked)
                                                    {
                                                        <input class="custom-control-input category-click child-category" data-level="child" data-parent-id="@item.CategoryId" type="checkbox" id="@child.CategoryId" value="@child.CategoryId" name="CategoryId" checked>
                                                    }
                                                    else
                                                    {
                                                        <input class="custom-control-input category-click child-category" data-level="child" data-parent-id="@item.CategoryId" type="checkbox" id="@child.CategoryId" value="@child.CategoryId" name="CategoryId">
                                                    }
                                                    <label for="@child.CategoryId" class="custom-control-label font-weight-normal">@child.Name</label>
                                                </div>
                                            </div>
                                            <div class="pl-4 childCategory-@child.CategoryId">
                                                @foreach (var subChild in Model.Categories)
                                                {
                                                    if (subChild.CategoryParentId == child.CategoryId)
                                                    {
                                                        <div class="custom-control custom-checkbox ml-4">
                                                            @if (subChild.IsChecked)
                                                            {
                                                                <input class="custom-control-input category-click sub-child-category" data-level="subChild" data-parent-id="@child.CategoryId" type="checkbox" id="@subChild.CategoryId" value="@subChild.CategoryId" name="CategoryId" checked />
                                                            }
                                                            else
                                                            {
                                                                <input class="custom-control-input category-click sub-child-category" data-level="subChild" data-parent-id="@child.CategoryId" type="checkbox" id="@subChild.CategoryId" value="@subChild.CategoryId" name="CategoryId" />
                                                            }
                                                            <label for="@subChild.CategoryId" class="custom-control-label font-weight-normal">@subChild.Name</label>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        }
                                    }

                                </div>
                            }
                        }
                    }
                </div>
            </div>

            @*Bảo hành sản phẩm*@
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Bảo hành</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Thời gian bảo hành</label>
                        <select class="form-control form-control-sm rounded-0" name="Guarantee" id="Guarantee">
                            @for (int i = 1; i <= 72; i++)
                            {
                                <option value="@i" @(Model.Guarantee == i ? "selected='selected'" : "")>@i tháng</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            @*Tag Sản Phẩm*@
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Từ khóa sản phẩm (Tag)</h3>
                </div>
                <div class="card-body">
                    <div class="input-group input-group-sm">
                        <input hidden name="Tag" id="Tag" value="" />
                        <input type="text" id="AddTag" name="AddTag" class="form-control rounded-0">
                        <span class="input-group-append">
                            <button type="button" class="btn btn-info btn-flat rounded-0" id="addTag">Thêm Tag</button>
                        </span>
                    </div>
                    <p class="my-2 font-italic small">Phân cách các thẻ bằng dấu phẩy</p>
                    <div class="tag-area row px-2" id="renderTag">

                        @if (Model.Tags.FirstOrDefault() != null)
                        {
                            foreach (var item in Model.Tags)
                            {
                                {
                                    TagId += "|" + item.TagId;
                                    TagValue += "|" + item.Name;
                                }
                                <div id="parent@(item.TagId)">
                                    <a href="#" onclick="removeTag(this)" class="removeTag" data-id="@item.TagId" data-name="@item.Name">
                                        <i class="fas fa-times-circle small text-danger mb-1"></i>
                                    </a>
                                    <span class="mr-2 badge badge-light border" value="@item.Name">@item.Name</span>
                                </div>
                            }
                            TagValue = TagValue.Remove(0, 1);
                            TagId = TagId.Remove(0, 1);
                        }
                    </div>
                </div>
            </div>


            @*Ảnh Sản Phẩm*@
            <div class="card position-relative">
                <div class="card-header">
                    <h3 class="card-title">Album hình ảnh sản phẩm</h3>
                </div>
                <div class="card-body">
                    <div class="preview-image w-100">
                        <img id="previewCover" src="~/Content/Upload/Images/@Model.CoverName" style="width: 100%; height: auto;" />

                        <div class="position-absolute @classRemoveImage" id="removeCover" style="top: 5px; right:10px">
                            <a href="#" class="text-primary" data-toggle="tooltip" title="Xóa hình cover" style="font-size: 19px"><i class="fa fa-trash"></i></a>
                        </div>
                    </div>
                    <input type="text" hidden id="CoverName" name="CoverName" value="@Model.CoverName" data-toggle="modal" data-target="#uploadImage" />
                    <label for="CoverName" class="btn btn-primary btn-flat mt-3 btn-block">Chọn Hình Cover</label>
                    <p class="my-2 font-italic small text-center">Hình này sẽ làm hình ảnh đại diện cho sản phẩm</p>
                </div>
            </div>

            @*Album hình ảnh sản phẩm*@
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Album hình ảnh sản phẩm</h3>
                </div>
                <div class="card-body">
                    <input name="Image" id="Image" hidden value="@Model.Image" />
                    <div class="row mt-2" id="renderImage">

                    </div>
                    <p class="my-2 font-italic small text-center">Bạn có thể chọn 1 hoặc nhiều hình để hiển thị trên trang sản phẩm</p>
                    <div class="text-center">
                        <a class="btn btn-info btn-flat text-white" id="uploadImageList" data-toggle="modal" data-target="#uploadImage">
                            <i class="fa fa-upload"></i>
                            Upload hoặc chọn hình
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
}



@section Scripts {
    <script>
        var tagInputResult = [];
        var tagId = [];
        var id = 0;

        $(document).ready(function () {
            var tagArray = "@TagValue";
            var tagIdArray = "@TagId";
            if (tagArray != "") {
                tagInputResult = tagArray.split("|");
                tagId = tagIdArray.split("|");
                id = tagId.length;
            }
            console.log("a",$("#Tag").val(),tagInputResult, tagId);
        });

    </script>
    <script src="~/Scripts/Admin/upload-img.js"></script>
    <script src="~/Scripts/Admin/product.js"></script>
}
