@model TheGioiLoa.Models.Menu
<div class="modal-header border-0">
    <h4 class="card-title font-weight-bold">Chỉnh sửa menu</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
</div>
<div class="modal-body py-0">
    @using (Ajax.BeginForm("EditMenu", new AjaxOptions
    {
        HttpMethod = "POST",
        OnBegin = "loadingSpinner('#modalNormal-loading')",
        OnSuccess = "editMenuSuccess",
    }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(modal=>Model.MenuId)
        <div class="form-group row align-items-center">
            <label for="Name" class="col-md-4 m-0">Tên Menu</label>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control form-control-sm rounded-0", @placeholder = "Tên menu" })
            </div>
        </div>
        <div class="form-group row align-items-center">
            <label for="Url" class="col-md-4 m-0">Đường dẫn (URL)</label>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Url, new { @class = "form-control form-control-sm rounded-0", @placeholder = "Đường dẫn tĩnh" })
            </div>
        </div>
        <div class="form-group text-right">
            <div class="col-md-12">
                <button type="submit" class="btn btn-success text-right">Hoàn Tất</button>
                <button type="button" class="btn btn-danger text-right" data-dismiss="modal">Hủy Bỏ</button>
            </div>
        </div>
    }
</div>