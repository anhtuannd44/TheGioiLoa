@model IEnumerable<TheGioiLoa.Models.Menu>
@{ var i = 1;}

@if (Model.Count() != 0)
{
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 5%">
                    STT
                </th>
                <th style="width: 20%">
                    Tên Menu
                </th>
                <th style="width: 10%" class="text-center">
                    Hành động
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        <a href="@item.Url" data-toggle="tooltip" data-placement="top" title="Xem @item.Name"> @item.Name </a>

                    </td>

                    <td class="text-center">
                        <a class="" href="@item.Url" data-toggle="tooltip" title="Xem" target="_blank">
                            <i class="fas fa-eye text-info">
                            </i>
                        </a>
                        <a class="ml-1 edit-menu-top" href="#edit" data-toggle="tooltip" title="Sửa" data-id="@item.MenuId" data-name="@item.Name">
                            <i class="fas fa-pencil-alt text-warning">
                            </i>
                        </a>
                        <a class="ml-1 delete-menu-top" href="#remove" data-id="@item.MenuId" data-name="@item.Name" data-toggle="tooltip" title="Xóa">
                            <i class="fas fa-trash text-danger">
                            </i>
                        </a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}
else
{
    <div class="no-infomation">
        <p class="text-danger text-center">Chưa có dữ liệu</p>
    </div>
}
